#include <iostream>
using namespace std;
struct student{ char name[5];
int id;
float GPA;
};
int main() 
{ struct student x[3]; 
int i;
for(i=0; i<3; i++)
{
cout<<"x===>id, name, GPA=";
cin>>x[i].id>>x[i].name>>x[i].GPA;
}
for(i=0; i<3; i++)
{
x[i].GPA = x[i].GPA + 0.5;
}
for(i=0; i<3; i++)
{
cout<<"\n x===>id="<<x[i].id<<"\t name="<<x[i].name<<"\t
GPA="<<x[i].GPA;
 }

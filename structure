structure:*/

#include<iostream>
using namespace std;
struct emp{
int id;
char name[10];
float salary;
};
int main( )
{ struct emp x[5];
int i;
for(i=0;i<5;i++)
{cout<<"\t ID "<<i<<"= ";
cin>>x[i].id;
cout<<"\t Name= ";
cin>>x[i].name;
cout<<"\t Salary= ";
cin>>x[i].salary;
}
for(i=0;i<5;i++)
{
cout<<"\n \t ID= "<<x[i].id;
cout<<"\t Name= "<<x[i].name;
cout<<"\t Salary= "<<x[i].salary;
}
}

